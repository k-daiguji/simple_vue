{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "composite": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["tests/*"]
    },
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/env.d.ts", "src/**/*", "tests"]
}
